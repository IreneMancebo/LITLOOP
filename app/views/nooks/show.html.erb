<%# nooks#show - app/views/nooks/show.html.erb %>
<div class="screen-content-wrapper">
  <%# LOCATION HEADER AND COORDINATES %>
<%= link_to "Log out", destroy_user_session_path, data: {turbo_method: :delete}, class: "dropdown-item" %>
  <div class="nook-header">
    <div class="nook-name"><h1><%= @nook.name %></h1></div>
    <div class="nook-location"><h4 data-controller="typed" data-typed-strings-value="<%= @nook.longitude %>">[<%= @nook.longitude %>, <%= @nook.latitude %>]</h4></div>
  </div>

  <%# IMAGES CAROUSEL VIA SWIPER %>
  <div class="swiper" data-controller="swiper">
    <div class="swiper-wrapper">
      <% @nook.photos.each do |nook| %>
        <div class="swiper-slide"><%= cl_image_tag nook.key, height: 300, width: 350, crop: :fill, class:"swiper-img" %></div>
      <% end %>
    </div>
  </div>

  <%# POST-IT NOTE WITH LOCATION DESCRIPTION %>
  <div class="container-fluid show-details mb-5">
    <div class="post-it">
      <div class="note"><%= @nook.description %>
      <h6>Signed, <%= @nook.user.username %></h6>
      </div>
    </div>
  </div>

  <div class="crud_links">
    <%= link_to "Edit nook", edit_nook_path(@nook), class: "crud_button" %>
    <td><%= link_to "Delete nook", nook_path(@nook), class: "crud_button", data: {turbo_method: :delete, turbo_confirm: "Are you sure?"} %></td>
  </div>

<%# Add Footnote form %>
  <div data-controller="toggle" class="container all-footnotes mb-5 justify-content-center">
    <button data-action="click->toggle#fire" class="btn btn-outline-primary">Write a Footnote</button>
      <div data-toggle-target="togglableElement" class="d-none">
        <%= render 'footnotes/footnote', nook: @nook, footnote: @footnote %>
      </div>
    </div>

<div class="container all-footnotes mb-5">
    <% @footnotes.each do |footnote| %>
      <div class="footnote-inner">
         <p><%= footnote.text %></p>
         <%= link_to "#{footnote.user[:username]}", user_path(footnote.user) %>
      </div>
    <% end %>

  <div class="nook-map-wrapper">
    <div class="nook-map" style="width: 90vw; height: 200px;"
      data-controller="map"
      data-map-markers-value="<%= @marker.to_json %>"
      data-map-api-key-value="<%= ENV['MAPBOX_API_KEY'] %>"></div>
  </div>

  <% if current_user == @nook.user %>
    <div>
      <td><%= link_to 'Delete nook', nook_path(@nook), data: {turbo_method: :delete, turbo_confirm: "Are you sure?"} %></td>
      <%= link_to "Edit nook", edit_nook_path(@nook) %>
    </div>
  <% end %>

</div>
