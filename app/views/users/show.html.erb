<h1><%= @user.username %></h1>

<ul class="nav nav-pills mb-3" id="pills-tab" role="tablist">
  <li class="nav-item" role="presentation">
    <button class="nav-link active" id="pills-favorite-nooks-tab" data-bs-toggle="pill" data-bs-target="#pills-favorite-nooks" type="button" role="tab" aria-controls="pills-favorite-nooks" aria-selected="true">Favorite Nooks</button>
  </li>
  <li class="nav-item" role="presentation">
    <button class="nav-link" id="pills-created-nooks-tab" data-bs-toggle="pill" data-bs-target="#pills-created-nooks" type="button" role="tab" aria-controls="pills-created-nooks" aria-selected="false">Created Nooks</button>
  </li>
  <li class="nav-item" role="presentation">
    <button class="nav-link" id="pills-created-footnotes-tab" data-bs-toggle="pill" data-bs-target="#pills-created-footnotes" type="button" role="tab" aria-controls="pills-created-footnotes" aria-selected="false">Created Footnotes</button>
  </li>
</ul>

<div class="tab-content" id="pills-tabContent">
  <div class="tab-pane fade show active" id="pills-favorite-nooks" role="tabpanel" aria-labelledby="pills-favorite-nooks-tab" tabindex="0">
    <!-- Place your code for displaying favorite nooks here -->
    <%= render "favorites_user", favorite_booknooks: @favorite_booknooks %>
  </div>
  <div class="tab-pane fade" id="pills-created-nooks" role="tabpanel" aria-labelledby="pills-created-nooks-tab" tabindex="0">
    <!-- Place your code for displaying created nooks here -->
    <%= render "nooks_user", created_booknooks: @created_booknooks %>
  </div>
  <div class="tab-pane fade" id="pills-created-footnotes" role="tabpanel" aria-labelledby="pills-created-footnotes-tab" tabindex="0">
    <!-- Place your code for displaying created footnotes here -->
    <%= render "footnotes_user", created_footnotes: @created_footnotes %>
  </div>
</div>


<a href="<%= nooks_path %>" class="btn btn-primary">
  <i class="fa fa-arrow-left"></i> Back to Nooks
</a>


